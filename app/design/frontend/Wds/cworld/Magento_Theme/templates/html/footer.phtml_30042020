<script type="text/javascript">
require(['jquery'],function($){ 
	var total_element=$('.custom_pricing').length;
    var counter=0;
	if(total_element>0){
        $('.custom_pricing').each(function(){
             if($(this).find('.price-final_price .special-price').hasClass('special-price'))
                var final_price=$(this).find('.price-final_price .special-price .price').text();
            else
                var final_price=$(this).find('.price-final_price .price').text();
                
            final_price=final_price.replace('$','');
            final_price=final_price.replace(',','');
            final_price=eval(final_price);
            counter++;
            if( $('#categoryProducts .products.items').hasClass('grid')){
               $( '<div class="custome_leasing_pricing" ><spna style="display:none">'+final_price+'</spna></div>' ).insertAfter(this); 
            }else{
                $( '<div class="custome_leasing_pricing" ><spna style="display:none">'+final_price+'</span></div>' ).insertBefore($(this).parent().parent().parent().find('.brand_logo'));
            }
            if(counter==total_element){
                $('.products .item').first().addClass('start_finding_leasing');
               call_leaser_api();
            }
        });
    }else if($('.product-info-price').hasClass('product-info-price')){
			
            if($('.product-info-price').find('.price-final_price .special-price').hasClass('special-price'))
                var final_price=$('.product-info-price').find('.price-final_price .special-price .price').text();
            else
                var final_price=$('.product-info-price').find('.price-final_price .price').text();
                
            final_price=final_price.replace('$','');
            final_price=final_price.replace(',','');
            final_price=eval(final_price);
            var name=$('.page-title-wrapper.product span').html();
            product_name=name;
        $('.load_leading_option').append('<div class="custome_leasing_pricing" ><spna style="display:none">'+final_price+'</span></div>');
       callLEASEREPAPI(final_price,$('.product_right_mn'),product_name);
    }

    function call_leaser_api(){
        if($('.products .item.start_finding_leasing').hasClass('start_finding_leasing')){
           var obj=$('.products .item.start_finding_leasing')
           $(obj).addClass('completed');
           $(obj).removeClass('start_finding_leasing');
           $(obj).next().addClass('start_finding_leasing');
           var price=eval($(obj).find('.custome_leasing_pricing').text());
           var product_name=encodeURI($(obj).find('.product-item-link').text().trim());
           if(price>999){
                callLEASEREPAPI(price,obj,product_name,true);
           }else{
                call_leaser_api();
           }
       }            
    }


    function callLEASEREPAPI(cost,obj,name,recursive){
        var requri   = 'https://www.leaserep.com/public_api/v1/quotes2';
        var datavalue = {totalCost:cost};
        var api_key_leasing='2b383420-4c2b-4953-877c-fc20e49f320b';
        var formkey='5082307118';
		var data_in=JSON.stringify(datavalue)
	    $.ajax({
            type: 'POST',
            url: requri,
            headers: { 'Marlin-API-Key': api_key_leasing },
            data: JSON.stringify(datavalue), 
            contentType: "application/json",
            success: function(json){
                thtml = "";
                if (json['meta']) {
                    if(json['meta']['code'] == 200 && json['result']!=undefined){
                       
                        for (i = 0; i<json['result']['payments'].length; i++) {

                                for (j = 0; j <json['result']['payments'][i]['options'].length; j++) {
    if(json['result']['payments'][i]['options'][j]['rates'] != null &&json['result']['payments'][i]['options'][j]['rates'] != ""){
    thtml+= json['result']['payments'][i]['options'][j]['rates'][0]['paymentDisplay'];

        //$('#financeamount_1').html('' + thtml + ' / month');
            
    var href=json['result']['payments'][i]['options'][j]['rates'][0]['href'] + ' &eq_desc1='+name+'&apiKey='+formkey+'&eq_qty1=1&eq_cost1='+cost;


    var html='<form action="" method="post" id="product_info"><input type="hidden" name="prices[]" value="100"><a href="'+href+'"  target="_blank" class="financelink btn btn-primary btn-sm"><span class="financetext" >Finance for as low as</span><span class="financeamount" >'+ thtml + ' / month'+'</span><span class="apply_leasing">Apply Now</span></a></form>';
        
        $(obj).find('.custome_leasing_pricing').html(html);

        if(recursive!=true){
            $('.iteam-eligible-text .apply_now a').attr('href',href);
            $('.iteam-eligible-text .apply_now').show();
        }

                             }

                        }
                    }
                }else{
                //$('#financeamount_1').html('' + json['meta']['message']);
                }
            }
        }
       });
        if(recursive==true)
            call_leaser_api();

    }
});  
</script>
