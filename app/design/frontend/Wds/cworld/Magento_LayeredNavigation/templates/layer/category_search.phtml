<?php 
$_masterHelper = $this->helper('Wds\Coreoverride\Helper\Master');
$baseUrl = $_masterHelper->getStoreBaseUrl();
  
$brand_id = "";
$category_id ="";

if($this->getRequest()->getModuleName()=="mpbrand"){
     $current_brand = $_masterHelper->getStoreCurrentBrand();
     if($current_brand)
         $brand_id =  $current_brand->getId();
}else{
      $current_category = $_masterHelper->getStoreCurrentCategory();
      if($current_category)
          $category_id = $current_category->getId();
}	
?>
