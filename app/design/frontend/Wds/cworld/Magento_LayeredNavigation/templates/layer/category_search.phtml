            <div class="field category-search">             
                   <input id="category-search" type="text" name="q" value="" class="input-text">
                  <?php if($category_id!=''): ?>
                   <input type="hidden" name="cat" value="<?php echo $category_id; ?>" >
                  <?php endif; ?>
                  <?php if($brand_id!=''): ?>
                   <input type="hidden" name="magebrand" value="<?php echo $brand_id; ?>" >
                  <?php endif; ?>
             </div>      
            <div class="actions">
