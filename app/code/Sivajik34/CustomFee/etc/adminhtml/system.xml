<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="customfee" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <class>separator-top</class>
            <label>Custom Fee</label>
            <tab>sales</tab>
            <resource>Magento_Catalog::config_catalog</resource>

            <group id="customfee" translate="label" type="text" sortOrder="500" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Custom Fee Settings</label>
                <field id="status" translate="label comment" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Status</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                
                <field id="minimum_order_amount" translate="label comment" type="text" sortOrder="2" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Minimum Order Amount To Display</label>
                    <comment><![CDATA[Greaterthan or equal to]]></comment>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>


                <field id="name" translate="label comment" type="text" sortOrder="3" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Fee Name 1</label>                 
                </field>
                <field id="customfee_amount" translate="label comment" type="text" sortOrder="4" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Custom Fee Amount 1</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>


                <field id="name2" translate="label comment" type="text" sortOrder="5" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Fee Name 2</label>                 
                </field>
                <field id="customfee_amount2" translate="label comment" type="text" sortOrder="6" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Custom Fee Amount 2</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>


                <field id="name3" translate="label comment" type="text" sortOrder="7" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Fee Name 3</label>                 
                </field>
                <field id="customfee_amount3" translate="label comment" type="text" sortOrder="8" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Custom Fee Amount 3</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="name4" translate="label comment" type="text" sortOrder="9" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Fee Name 4</label>                 
                </field>
                <field id="customfee_amount4" translate="label comment" type="text" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Custom Fee Amount 4</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="name5" translate="label comment" type="text" sortOrder="11" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Fee Name 5</label>                 
                </field>
                <field id="customfee_amount5" translate="label comment" type="text" sortOrder="12" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Custom Fee Amount 5</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
            </group>

        </section>

    </system>
</config>
