<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <update handle="styles"/>
    <head>
        <css src="Mageplaza_AffiliatePro::css/banner.css"/>
    </head>
    <body>
        <referenceBlock name="affiliate_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="affiliate-navigation-banner-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Banners</argument>
                    <argument name="path" xsi:type="string">affiliate/account/banner</argument>
                    <argument name="sort_order" xsi:type="string">25</argument>
                    <argument name="active" xsi:type="string">login</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
